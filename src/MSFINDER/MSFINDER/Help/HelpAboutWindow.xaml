<Window x:Class="Rfx.Riken.OsakaUniv.HelpAboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About MS-FINDER" Height="380" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition Height="160" />
        </Grid.RowDefinitions>

        <Image Source="/Resources/msfinder_icon.png" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,10,10,10" />

        <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Label Content="{Binding Version}" Margin="10,0,0,0" />
            <Label Content="{Binding Date}" Margin="10,0,0,0" />
            <Label Content="Lead developer: Hiroshi Tsugawa" Margin="10,0,0,0" />
            <Label Content="Main contributor: Diego Pedrosa" Margin="10,0,0,0" />
            <Label Content="Contact: hiroshi.tsugawa@riken.jp" Margin="10,0,0,0" />
        </StackPanel>
    </Grid>
</Window>

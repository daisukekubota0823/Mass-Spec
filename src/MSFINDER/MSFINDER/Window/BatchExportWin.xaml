<Window x:Class="Rfx.Riken.OsakaUniv.BatchExportWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Batch export option" Height="120" Width="600">
    <Grid>

        <Label Content="Folder path: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,5,0,0" />
        <TextBox Name="TextBox_FolderPath" Width="330" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" VerticalContentAlignment="Center" Margin="80,5,0,0" />
        <Button Content="Browse" Click="Button_Click" Width="80" Height="25" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,90,0" />
        <Button Content="Export" Click="Button_Export" Width="80" Height="25" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,05,5,0" />

        <CheckBox Content="Export all results in a single file" Name="CheckBox_ExportToSingleFile" IsChecked="True" Checked="CheckBox_ExportToSingleFile_Checked" Unchecked="CheckBox_ExportToSingleFile_Unchecked" HorizontalAlignment="Left" VerticalAlignment="Top" VerticalContentAlignment="Center" Margin="5, 55, 0, 0" />
        <Label Content="Top N candidate: " HorizontalAlignment="Left" Margin="200,49,0,0" VerticalAlignment="Top" />
        <TextBox Name="TextBox_Number" Width="80" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" VerticalContentAlignment="Center" Margin="300,52,0,0" />

    </Grid>
</Window>

<Window x:Class="Rfx.Riken.OsakaUniv.ForAIF.CorrDec.AskDecMethodWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rfx.Riken.OsakaUniv.ForAIF.CorrDec"
        mc:Ignorable="d"
        x:Name="window"
        Title="Select deconvolution method" Height="120" Width="250">
    <Grid>
        <StackPanel Margin="10">
            <ComboBox ItemsSource="{Binding ItemsSource}" SelectedItem="{Binding SelectedItem}"/>
            <Button Content="Finish" Command="{Binding FinishCommand}" CommandParameter="{Binding ElementName=window}" Width="80" HorizontalAlignment="Right" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="Rfx.Riken.OsakaUniv.ProgressBarWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Progress of each step: peak detection, identification, and alignment" Height="70" Width="680" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>
        <ProgressBar Name="ProgressView" Grid.Column="0" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Margin="5,5,5,5"/>
        <Label Name="ProgressBar_Label" Content="" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</Window>